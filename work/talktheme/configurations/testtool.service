[Unit]
Description=gunicorn daemon (TalkTheme)
Requires=TalkTheme.socket
After=network.target

[Service]
User=vagrant
Group=www-data
WorkingDirectory=/home/test-user/synced_folder/TalkTheme/project
ExecStart=/home/test-user/venv/ttenv/bin/gunicorn \
	  --access-logfile /home/test-user/TalkTheme/logs/access.log \
	  --error-logfile /home/test-user/TalkTheme/logs/error.log \
	  --bind unix:/run/gunicorn/testtool.sock \
	  config.wsgi:application

[Install]
WantedBy=multi-user.target
